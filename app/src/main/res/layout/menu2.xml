        android:hint="Cantidad"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
