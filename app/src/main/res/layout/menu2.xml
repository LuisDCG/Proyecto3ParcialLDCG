        app:layout_constraintTop_toBottomOf="@id/comidaD" />

    <!-- Número de mesa -->

    <!-- Botón Pedir -->

    <!-- Botón Solicitar Antojo -->

    <EditText
        android:id="@+id/CantidadAlmuerzoD"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="number"
        android:textColor="#FFFFFF"
