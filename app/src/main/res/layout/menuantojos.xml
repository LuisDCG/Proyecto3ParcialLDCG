<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo2">

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="36dp"
            android:text="Menú de Antojos"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Antojo 1: Postre de Duraznos -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="110dp"
            android:layout_height="108dp"
            android:src="@drawable/postreduraznos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuTitle" />

        <TextView
            android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Postre de Duraznos"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image1"
            app:layout_constraintEnd_toStartOf="@+id/txtAntojitoA"
            app:layout_constraintTop_toTopOf="@+id/image1" />

        <EditText
            android:id="@+id/txtAntojitoA"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="Cantidad"
            app:layout_constraintStart_toEndOf="@+id/item1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image1" />

        <!-- Antojo 2: Torta de Chocolate -->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="110dp"
            android:layout_height="108dp"
            android:src="@drawable/tortachocolate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image1" />

        <TextView
            android:id="@+id/item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Torta de Chocolate"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image2"
            app:layout_constraintEnd_toStartOf="@+id/txtAntojitoB"
            app:layout_constraintTop_toTopOf="@+id/image2" />

        <EditText
            android:id="@+id/txtAntojitoB"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="Cantidad"
            app:layout_constraintStart_toEndOf="@+id/item2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image2" />

        <!-- Antojo 3: Flan de Vainilla -->
        <ImageView
            android:id="@+id/image3"
            android:layout_width="110dp"
            android:layout_height="108dp"
            android:src="@drawable/flanvainilla"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image2" />

        <TextView
            android:id="@+id/item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Flan de Vainilla"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image3"
            app:layout_constraintEnd_toStartOf="@+id/txtAntojitoC"
            app:layout_constraintTop_toTopOf="@+id/image3" />

        <EditText
            android:id="@+id/txtAntojitoC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="Cantidad"
            app:layout_constraintStart_toEndOf="@+id/item3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image3" />

        <EditText
            android:id="@+id/txtNumeroMesaAntojito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Número de mesa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image3" />

        <Button
            android:id="@+id/btnSolicitarAntojito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Solicitar Antojito"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNumeroMesaAntojito" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Regresar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSolicitarAntojito" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
